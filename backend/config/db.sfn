CREATE DATABASE todo_app;

USE todo_app;


CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    email VARCHAR(255) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    pseudo VARCHAR(255) UNIQUE NOT NULL
);

CREATE TABLE tasks ( id INT AUTO_INCREMENT PRIMARY KEY, title VARCHAR(255) NOT NULL, description TEXT, isCompleted BOOLEAN DEFAULT FALSE, userId INT, FOREIGN KEY (userId) REFERENCES users(id) ON DELETE CASCADE);

